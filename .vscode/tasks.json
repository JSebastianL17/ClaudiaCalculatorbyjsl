{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "cppbuild",
        "label": "Build ClaudiaCalc Project",
        "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
        "args": [
          "-fdiagnostics-color=always",
          "-g",
          "main.cpp",
          "ClaudiaCalc.cpp",
          "Register.cpp",
          "-o",
          "ClaudiaCalc.exe",
          "-L", "C:/msys64/ucrt64/lib",
          "-I", "C:/msys64/ucrt64/include",
          "-lfmt",
          "-DSPDLOG_FMT_EXTERNAL",
          "-static-libgcc",
          "-static-libstdc++",
          "-v"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "Custom task to build ClaudiaCalc project."
      }
    ]
  }
